{
  "name": "@classytic/mongokit",
  "version": "3.1.0",
  "description": "Production-grade MongoDB repositories with zero dependencies - smart pagination, events, and plugins",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./pagination": {
      "types": "./dist/pagination/PaginationEngine.d.ts",
      "default": "./dist/pagination/PaginationEngine.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./dist/plugins/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./actions": {
      "types": "./dist/actions/index.d.ts",
      "default": "./dist/actions/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mongodb",
    "mongoose",
    "repository",
    "repository-pattern",
    "data-access",
    "pagination",
    "cursor-pagination",
    "infinite-scroll",
    "offset-pagination",
    "keyset-pagination",
    "caching",
    "redis",
    "cache",
    "multi-tenant",
    "multi-tenancy",
    "event-driven",
    "plugin-based",
    "zero-dependencies",
    "express",
    "fastify",
    "nestjs",
    "nextjs",
    "typescript"
  ],
  "author": "Sadman Chowdhury (Github: @siam923)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/classytic/mongokit.git"
  },
  "bugs": {
    "url": "https://github.com/classytic/mongokit/issues"
  },
  "homepage": "https://github.com/classytic/mongokit#readme",
  "peerDependencies": {
    "mongoose": "^8.0.0 || ^9.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck",
    "publish:dry": "npm publish --dry-run --access public",
    "publish:npm": "npm publish --access public",
    "release": "npm run build && npm run typecheck && npm publish --access public",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "mongodb-memory-server": "^10.2.3",
    "mongoose": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
