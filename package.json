{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "Configuration-based ecommerce backend API - single tenant, no platform dependencies",
  "type": "module",
  "main": "index.js",
  "imports": {
    "#core/*": "./core/*",
    "#shared/*": "./shared/*",
    "#common/*": "./common/*",
    "#config/*": "./config/*",
    "#models/*": "./models/*",
    "#modules/*": "./modules/*",
    "#routes/*": "./routes/*",
    "#utils/*": "./utils/*",
    "#lib/*": "./lib/*",
    "#data/*": "./data/*"
  },
  "scripts": {
    "dev": "node --watch index.js",
    "start": "node index.js",
    "start:gc": "node --expose-gc index.js",
    "worker": "node worker.js",
    "worker:dev": "node --watch worker.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "validate:env": "node -e \"import('./config/validator.js').then(m => m.validateEnvironmentOrThrow())\"",
    "memory:check": "node -e \"import('./lib/utils/memory.js').then(m => console.log(m.formatMemoryUsage()))\"",
    "seed:categories": "node modules/catalog/categories/seed-categories.js"
  },
  "engines": {
    "node": ">=24"
  },
  "keywords": [],
  "author": "Sadman Chowdhury (Github: @siam923)",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.978.0",
    "@classytic/arc": "^1.0.8",
    "@classytic/bd-areas": "^1.0.0",
    "@classytic/bd-logistics": "^1.0.3",
    "@classytic/media-kit": "^2.0.0",
    "@classytic/mongokit": "^3.1.4",
    "@classytic/mongoose-slug-plugin": "^1.0.1",
    "@classytic/notifications": "^0.0.1",
    "@classytic/revenue": "^1.1.2",
    "@classytic/revenue-manual": "^0.2.2",
    "@classytic/shared-types": "^1.0.1",
    "@fastify/compress": "^8.3.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/under-pressure": "^9.0.3",
    "bcryptjs": "^3.0.2",
    "close-with-grace": "^2.4.0",
    "csv": "^6.4.1",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "fastify": "^5.7.2",
    "fastify-raw-body": "^5.0.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.1.5",
    "mongoose-timeline-audit": "^1.0.2",
    "nodemailer": "^7.0.3",
    "pino-pretty": "^13.1.2",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "stripe": "^20.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "eslint": "^9.14.0",
    "globals": "^16.2.0",
    "mongodb-memory-server": "^10.4.1",
    "vitest": "^3.2.4"
  }
}
